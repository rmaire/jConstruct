<configuration scan="true" scanPeriod="15 seconds">
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%d{HH:mm:ss.SSS} [%thread] %.-1level %logger{36} - %msg%n</Pattern>
        </encoder>
    </appender>
 
    <root level="ERROR">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
